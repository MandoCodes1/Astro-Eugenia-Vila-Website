---
interface Props {
  lang: 'es' | 'en';
  currentPath: string;
}

const { lang, currentPath } = Astro.props;

// Convert current path to the other language
const getAlternatePath = () => {
  if (lang === 'es') {
    return currentPath.replace('/es/', '/en/').replace('/sobre-mi/', '/about/').replace('/servicios/', '/services/').replace('/casos/', '/cases/').replace('/opiniones/', '/reviews/').replace('/contacto/', '/contact/');
  } else {
    return currentPath.replace('/en/', '/es/').replace('/about/', '/sobre-mi/').replace('/services/', '/servicios/').replace('/cases/', '/casos/').replace('/reviews/', '/opiniones/').replace('/contact/', '/contacto/');
  }
};

const alternatePath = getAlternatePath();
---

<a
  href={alternatePath}
  class="inline-flex items-center px-3 py-1 rounded-md font-medium transition-colors"
  style="border: 1px solid var(--color-primary); color: var(--color-primary);"
