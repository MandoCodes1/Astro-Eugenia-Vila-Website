---
// Google Analytics 4 component
// Replace GA_MEASUREMENT_ID with your actual GA4 Measurement ID
const GA_MEASUREMENT_ID = 'G-XXXXXXXXXX'; // TODO: Replace with actual GA4 ID

// Only load in production
const isProduction = import.meta.env.PROD;
---

{isProduction && GA_MEASUREMENT_ID && GA_MEASUREMENT_ID !== 'G-XXXXXXXXXX' && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID);
    </script>
  </>
)}

<!-- Note: This component is ready for GA4. To activate:
     1. Get your GA4 Measurement ID from Google Analytics
     2. Replace 'G-XXXXXXXXXX' above with your actual ID
     3. The analytics will automatically start tracking in production
-->

