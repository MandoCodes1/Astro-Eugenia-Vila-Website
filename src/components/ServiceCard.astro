---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg p-8 transition-all hover:shadow-xl hover:-translate-y-1">
  <div class="text-5xl mb-4">{icon}</div>
  <h3 class="text-2xl font-bold mb-3" style="color: var(--color-primary);">
    {title}
  </h3>
  <p class="text-gray-600 leading-relaxed">
    {description}
  </p>
</div>

