---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ReviewCard from '../../components/ReviewCard.astro';
import Pagination from '../../components/Pagination.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import { getPaginatedReviews } from '../../utils/reviews';

const lang = 'en';
const currentPath = '/en/reviews/';

const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1', 10);

const { reviews, totalPages, currentPage, total } = getPaginatedReviews(page, 12);
---

<Layout 
  title="Reviews - Dr. Eugenia Vila" 
  description="Read our patients' reviews. Over 60 five-star reviews from Google and Trustpilot."
  lang={lang}
>
  <Header lang={lang} currentPath={currentPath} />
  
  <section class="py-16 bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-dark)] text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">What Our Patients Say</h1>
      <p class="text-xl opacity-90 mb-6">
        Over {total} five-star reviews
      </p>
      <div class="flex justify-center items-center gap-1 mb-4">
        {[...Array(5)].map(() => (
          <svg class="w-8 h-8 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <p class="text-lg opacity-80">
        Verified reviews from Google and Trustpilot
      </p>
    </div>
  </section>

  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {reviews.map((review) => (
          <ReviewCard review={review} lang={lang} />
        ))}
      </div>

      {totalPages > 1 && (
        <Pagination 
          currentPage={currentPage} 
          totalPages={totalPages} 
          baseUrl="/en/reviews/"
        />
      )}
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-12" style="color: var(--color-dark);">
          Our Reputation
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-8 shadow-md">
            <div class="text-5xl font-bold mb-2" style="color: var(--color-primary);">{total}+</div>
            <div class="text-lg text-gray-600">Five-Star Reviews</div>
          </div>
          <div class="bg-white rounded-xl p-8 shadow-md">
            <div class="text-5xl font-bold mb-2" style="color: var(--color-primary);">20,000+</div>
            <div class="text-lg text-gray-600">Satisfied Patients</div>
          </div>
          <div class="bg-white rounded-xl p-8 shadow-md">
            <div class="text-5xl font-bold mb-2" style="color: var(--color-primary);">30+</div>
            <div class="text-lg text-gray-600">Years of Experience</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-dark)] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready for your best dental experience?</h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Join thousands of satisfied patients who trust Dr. Eugenia Vila
      </p>
      <a
        href="https://wa.me/34679975580"
        class="inline-flex items-center px-8 py-4 bg-white rounded-lg font-semibold text-lg transition-all hover:scale-105"
        style="color: var(--color-primary);"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        Book Appointment via WhatsApp
      </a>
    </div>
  </section>

  <Footer lang={lang} />
  <WhatsAppButton lang={lang} />
</Layout>

