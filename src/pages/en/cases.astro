---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BeforeAfter from '../../components/BeforeAfter.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';

const lang = 'en';
const currentPath = '/en/cases/';

const cases = [
  {
    title: 'Implant Rehabilitation',
    beforeImage: '/assets/images/dental_cases/before.png',
    afterImage: '/assets/images/dental_cases/after.png',
    description: 'Full restoration with dental implants and porcelain crowns',
  },
  {
    title: 'Example Case 2',
    beforeImage: '/assets/images/dental_cases/before.png',
    afterImage: '/assets/images/dental_cases/after.png',
    description: 'Add more cases by replacing these placeholder images',
  },
  {
    title: 'Example Case 3',
    beforeImage: '/assets/images/dental_cases/before.png',
    afterImage: '/assets/images/dental_cases/after.png',
    description: 'More cases coming soon',
  },
];
---

<Layout 
  title="Before & After Cases - Dr. Eugenia Vila" 
  description="See our before and after cases. Real results from implant, aligner, and cosmetic dentistry treatments."
  lang={lang}
>
  <Header lang={lang} currentPath={currentPath} />
  
  <section class="py-16 bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-dark)] text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Before & After Cases</h1>
      <p class="text-xl opacity-90 max-w-3xl mx-auto">
        Real results from our treatments. Excellence in every smile.
      </p>
    </div>
  </section>

  <section class="py-12 bg-blue-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-lg text-gray-700 leading-relaxed">
          With over 30 years of experience and thousands of successfully completed cases, 
          Dr. Eugenia Vila has transformed smiles using the most advanced techniques 
          in implantology, aligner orthodontics, and cosmetic dentistry. 
          Each treatment is personalized to achieve natural and lasting results.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {cases.map((caseItem, index) => (
          <BeforeAfter
            beforeImage={caseItem.beforeImage}
            afterImage={caseItem.afterImage}
            title={caseItem.title}
            description={caseItem.description}
            index={index}
          />
        ))}
      </div>

      <div class="mt-16 max-w-3xl mx-auto bg-yellow-50 border-2 border-yellow-200 rounded-xl p-8">
        <h3 class="text-2xl font-bold mb-4" style="color: var(--color-primary);">
          üì∏ Developer Note
        </h3>
        <p class="text-gray-700 mb-4">
          Current images are placeholders. To add real cases:
        </p>
        <ol class="list-decimal list-inside space-y-2 text-gray-700 mb-4">
          <li>Add new images to the <code class="bg-white px-2 py-1 rounded">assets/images/dental_cases/</code> folder</li>
          <li>Name images descriptively (e.g. <code class="bg-white px-2 py-1 rounded">implant-01-before.jpg</code>)</li>
          <li>Update the <code class="bg-white px-2 py-1 rounded">cases</code> array in this file with new paths</li>
          <li>Add relevant titles and descriptions for each case</li>
        </ol>
        <p class="text-sm text-gray-600 italic">
          This message can be removed when real cases are added.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center" style="color: var(--color-dark);">
          Treatment Types
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-md">
            <div class="text-4xl mb-3">ü¶∑</div>
            <h3 class="text-xl font-semibold mb-2" style="color: var(--color-primary);">Dental Implants</h3>
            <p class="text-gray-600">Full rehabilitations with implants and fixed prosthetics</p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-md">
            <div class="text-4xl mb-3">üòÅ</div>
            <h3 class="text-xl font-semibold mb-2" style="color: var(--color-primary);">Aligner Treatment</h3>
            <p class="text-gray-600">Malocclusion correction with clear aligners</p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-md">
            <div class="text-4xl mb-3">‚ú®</div>
            <h3 class="text-xl font-semibold mb-2" style="color: var(--color-primary);">Cosmetic Dentistry</h3>
            <p class="text-gray-600">Veneers, bonding, and smile design</p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-md">
            <div class="text-4xl mb-3">üîß</div>
            <h3 class="text-xl font-semibold mb-2" style="color: var(--color-primary);">Full Rehabilitation</h3>
            <p class="text-gray-600">Combination of multiple techniques for complex cases</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-dark)] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Want to transform your smile?</h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Schedule a consultation to discuss your case and create a personalized treatment plan
      </p>
      <a
        href="https://wa.me/34679975580"
        class="inline-flex items-center px-8 py-4 bg-white rounded-lg font-semibold text-lg transition-all hover:scale-105"
        style="color: var(--color-primary);"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        Free Consultation via WhatsApp
      </a>
    </div>
  </section>

  <Footer lang={lang} />
  <WhatsAppButton lang={lang} />
</Layout>

