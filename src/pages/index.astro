---
// Root page that detects language and redirects
const base = import.meta.env.BASE_URL || '/';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <meta http-equiv="refresh" content={`0; url=${base}es/`} />
    <script define:vars={{ base }}>
      // Detect browser language and redirect
      const browserLang = navigator.language.toLowerCase();
      const isSpanish = browserLang.startsWith('es');
      
      // Redirect to appropriate language (respecting base path)
      window.location.href = base + 'es/';
    </script>
  </head>
  <body>
    <p style="text-align: center; margin-top: 50px;">Redirecting to Spanish...</p>
  </body>
</html>
